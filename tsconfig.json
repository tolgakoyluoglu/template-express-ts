{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["./src/types"],
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "project": "api/tsconfig.json",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
